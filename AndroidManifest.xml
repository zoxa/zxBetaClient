<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ca.zoxa.betamaxclient" android:versionCode="1"
	android:versionName="1.0 alpha 1">

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="MainScreen" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="PhoneDialer" android:label="@string/app_name_dialer" />

		<activity android:name="SmsList" android:label="@string/app_name_sms" />
		
		<activity android:name="SmsCompose" android:label="@string/app_name_sms" />

		<activity android:name="VoipAccountManager" android:label="@string/app_name_voipacc" />
	</application>

	<uses-sdk android:minSdkVersion="8"/>

	<!-- Permissions for SMS Sender and Phone Caller -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.CALL_PHONE" />

</manifest> 